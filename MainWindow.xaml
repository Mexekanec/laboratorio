<Window x:Class="Laboratorio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratorio"
        mc:Ignorable="d"
        Title="Electro Simulator" Height="720" Width="1280">
    <Grid x:Name="MainGrid" Background="#FF171717" >
        <Grid.RowDefinitions>

            <RowDefinition Height="225*"/>

            <RowDefinition Height="65
                           *"/>
            <RowDefinition Height="20*"/>

            <RowDefinition Height="50*"/>
            <RowDefinition Height="10*"/>

            <RowDefinition Height="50*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="20*"/>

            <RowDefinition Height="50*"/>
            <RowDefinition Height="15*"/>

            <RowDefinition Height="30*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="95*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="475*"/>
            <ColumnDefinition Width="330*"/>
            <ColumnDefinition Width="475*"/>

        </Grid.ColumnDefinitions>
        <Button x:Name="button_simulate" Grid.Column="1" Content="Свободный режим" Grid.Row="2" BorderBrush="#FF313131" Foreground="#FF222222" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="22" Opacity="0.9" Margin="0,19,0,9" Grid.RowSpan="3" Click="button_simulate_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF686868" Offset="0.027"/>
                    <GradientStop Color="White" Offset="0.013"/>
                    <GradientStop Color="#FF686868" Offset="0.229"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="batton_lab" Grid.Column="1" Content="Выполнение лабораторных работ" Grid.Row="1" BorderBrush="#FF313131" Foreground="#FF004406" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="23" Opacity="0.9" Margin="0,0,0,1">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF008A0D" Offset="0.027"/>
                    <GradientStop Color="White" Offset="0.013"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button_guide" Grid.Column="1" Content="Справочник" Grid.Row="7" BorderBrush="#FF313131" Foreground="#FF222222" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="22" Opacity="0.9" Margin="0,0,0,1">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF686868" Offset="0.027"/>
                    <GradientStop Color="White" Offset="0.013"/>
                    <GradientStop Color="#FF686868" Offset="0.524"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button_settings" Grid.Column="1" Content="Настройки" Grid.Row="9" BorderBrush="#FF313131" Foreground="#FF222222" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="22" Opacity="0.9" Margin="0,0,0,18" Grid.RowSpan="2">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF686868" Offset="0.027"/>
                    <GradientStop Color="White" Offset="0.013"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button_create_lab" Grid.Column="1" Content="Создание лабораторных работ" Grid.Row="10" BorderBrush="#FF313131" Foreground="#FF222222" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="22" Opacity="0.9" Margin="0,18,4,14" Grid.RowSpan="3">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF686868" Offset="0.027"/>
                    <GradientStop Color="White" Offset="0.013"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button_exit" Grid.Column="1" Content="Выход" Grid.Row="12" BorderBrush="#FF313131" Foreground="#FF500000" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="20" Opacity="0.9" Click="button_exit_Click_1" Margin="0,13,4,4" Grid.RowSpan="3">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB40000" Offset="0.027"/>
                    <GradientStop Color="White" Offset="0.013"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button_simulate_load" Grid.Column="1" Content="Загрузка симуляции" Grid.Row="4" BorderBrush="#FF313131" Foreground="#FF222222" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="22" Opacity="0.9" Margin="0,9,0,1" Grid.RowSpan="2">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF686868" Offset="0.027"/>
                    <GradientStop Color="White" Offset="0.013"/>
                    <GradientStop Color="#FF686868" Offset="0.524"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>